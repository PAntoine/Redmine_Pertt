<h2>Create Pertt Chart</h2>

<%= form_for @chart, :url => '/pertt/create' do |f| %>
	<div class="box tabular">
		<%= hidden_field_tag 'project_id', @chart.project_id %>
		<%= hidden_field_tag 'tracker_id', 2 %>		<--- Temp hack to set the traker to delvopement --->
		<p><%= f.label :name, 'Name' %> <%= f.text_field :name, :required => true, :size => 60 %></p>
		<p><%= f.label :description, 'Description' %> <%= f.text_area :description, :cols => 60, :rows => 5, :class => "span6" %></p>
	</div>

	<div class="actions">
		<%= f.submit "Save" %>
	</div>
<% end %>
